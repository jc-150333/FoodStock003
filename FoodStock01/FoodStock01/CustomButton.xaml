<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodStock01.CustomButton">

    <StackLayout Orientation="Horizontal">
        <Image x:Name="buttomImage" Source="plus16.png"/>
        <Label x:Name="textNoLabel" IsVisible="False"/>
        <Label x:Name="textNameLabel" IsVisible="False"/>
        <Label x:Name="textCountLabel" IsVisible="False"/>
        <Label x:Name="textUnitLabel" IsVisible="False"/>

    </StackLayout>

    <ContentView.GestureRecognizers>
        <TapGestureRecognizer Tapped="OnButtonTapped" />
    </ContentView.GestureRecognizers>
</ContentView>